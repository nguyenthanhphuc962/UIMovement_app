<% provide(:title, "Update User") %>

<div class = "row display5">

  <h1 class = "header">Update User</h1>
  <%= form_for(@user) do |f| %>
    <div class = "col-md-3">
      <div class = "avatar">
        <%= image_tag(@user.avatar, class: "avatar3") %>
      </div>
      <div class = "user_name header">
        <h4><%= @user.name %></h4>
      </div>
        <%= f.file_field :avatar %>
    </div>


  <div class = "col-md-8">

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <br>

      <%= f.submit "Update my account", class: "btn btn-primary btn-block" %>

  </div>

<% end %>
</div>
