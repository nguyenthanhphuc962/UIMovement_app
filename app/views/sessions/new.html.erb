<%= provide(:title, "Log in") %>


<div class = "row display5">
  <h1 class = "header">Log in</h1>
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to "(Forget Password)", new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "inline" do  %>
        <%= f.check_box :remember_me %>
        <p class = "remember_me display">Remember me on this computer.</p>
      <% end %>

      <br>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    <p>New user?(<%= link_to "Sign up", new_user_path %>)</p>
    <div>
</div>
