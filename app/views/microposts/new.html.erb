<% provide(:title, "Creating micropost") %>


<div class = "row display5">
  <h1 class = "header">Create Movement</h1>
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for(@micropost, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <br>
      <%= f.label :category_id, "Select a category" %><br>
      <div class = "file_field">
        <%= select_tag(:category_id, options_for_select(@categories), prompt: "Select a category") %>
        <!--<%= f.collection_select :category_id, Category.all, :id, :name  %>-->
      </div>

      <br>
      <%= f.label :picture, "Upload micrpost" %>
      <%= f.file_field :picture, class: "file_field", accept: 'image/jpeg,image/gif,image/png' %>
      <br>
      <%= f.submit "Create Movement", class: "btn btn-primary btn-block" %>

    <% end %>

  </div>
</div>


<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
