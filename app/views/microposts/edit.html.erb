<% provide(:title, "Update micropost") %>



<div class = "row display5">
  <h1 class = "header">Update Movement</h1>
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for(@micropost, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <br>
      <%= f.label :category_id, "Select a category" %>
      <div class = "file_field">
        <%= select_tag(:category_id, options_for_select(@categories)) %>
      </div>
      <br>
      <%= f.label :micropost_img, "Upload" %>
      <div class = "file_field">
        <%= f.file_field :micropost_img %>
      </div>
      <br>
      <%= f.submit "Update Movement", class: "btn btn-primary btn-block" %>

    <% end %>


  </div>
</div>
